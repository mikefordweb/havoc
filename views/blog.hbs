                                        <div class="blog-date-time">{{{dateItem "time" creation_date}}}</div>
                                    </div>
                                    <div class="blog-page-text">
                                        {{blog_text}}
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>


        {{> header}}
            <div class="blog-main page-main-content">
	            
                <div class="page-header-wrap">	
                	<div class="page-h2-bkg"></div><h2 class="page-main-h2">Coach Bryan's Blog</h2><div class="page-h2-bkg"></div>
